#include<stdio.h>
int main()
{
    float s,ns,ad;

    scanf("%f",&s);
    if(s>=0 && s<=400.00)
    {
        ns=s+(s*.15);
        ad=ns-s;
        printf("Novo salario: %.2f\nReajuste ganho: %.2f\nEm percentual: 15 %%\n",ns,ad);
    }
    else  if(s>=400.01 && s<=800.00)
    {
        ns=s+(s*.12);
        ad=ns-s;
        printf("Novo salario: %.2f\nReajuste ganho: %.2f\nEm percentual: 12 %%\n",ns,ad);
    }
    else  if(s>=800.01 && s<=1200.00)
    {
        ns=s+(s*.10);
        ad=ns-s;
        printf("Novo salario: %.2f\nReajuste ganho: %.2f\nEm percentual: 10 %%\n",ns,ad);
    }
     else  if(s>=1200.01 && s<=2000.00)
    {
        ns=s+(s*.07);
        ad=ns-s;
        printf("Novo salario: %.2f\nReajuste ganho: %.2f\nEm percentual: 7 %%\n",ns,ad);
    }
     else  if(s>2000.00)
    {
        ns=s+(s*.04);
        ad=ns-s;
        printf("Novo salario: %.2f\nReajuste ganho: %.2f\nEm percentual: 4 %%\n",ns,ad);
    }
    return 0;

}
