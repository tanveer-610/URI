#include<stdio.h>
int main()
{
   int x,y;
   scanf("%d %d",&x,&y);

   if(x==1)
   {
      double sum=y*4.00;
      printf("Total: R$ %.2lf\n",sum);
   }
   else if(x==2)
   {
      double sum=y*4.50;
      printf("Total: R$ %.2lf\n",sum);
   }
   else if(x==3)
   {
      double sum=y*5.00;
      printf("Total: R$ %.2lf\n",sum);
   }

   else if(x==4)
   {
      double sum=y*2.00;
      printf("Total: R$ %.2lf\n",sum);
   }

   else if(x==5)
   {
      double sum=y*1.50;
      printf("Total: R$ %.2lf\n",sum);
   }




return 0;


}
