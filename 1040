#include<stdio.h>
int main()
{
    double n1,n2,n3,n4,ave,tv,s;
    scanf("%lf%lf%lf%lf",&n1,&n2,&n3,&n4);
    ave = ((n1*2)+(n2*3)+(n3*4)+(n4*1))/(2+3+4+1);
    printf("Media: %.1lf\n",ave);
    if (ave>=7.0)
        printf("Aluno aprovado.\n");
    else if (ave<5.0)
        printf("Aluno reprovado.\n");
    else if (ave>=5.0 && ave<=6.9)
    {
        printf("Aluno em exame.\n");
        scanf("%lf",&s);
        printf("Nota do exame: %.1lf\n",s);
        tv=(ave+s)/2;
      if (tv>=5.0)
        printf("Aluno aprovado.\n");
    else if (tv<4.9)
        printf("Aluno reprovado.\n");

        printf("Media final: %.1lf\n",tv);


    }
    return 0;
}
