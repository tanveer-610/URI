#include<stdio.h>
int main()
{
    int i,a,sum=0,c=0;
    while(1)
    {
        scanf("%d",&a);
        if(a==0)
            break;
        else
        {
            i=a;
            while(i>=a)
            {
                if(i%2==0)
                {
                    sum=sum+i;
                    c++;
                    if(c==5)
                        break;
                }
                i++;
            }
            printf("%d\n",sum);
        }
        sum=0;
        c=0;
    }
    return 0;
}
